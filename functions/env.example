# Firebase Functions Environment Variables
# Copy this file to .env and fill in your values

# AI Services (required for visit processing)
OPENAI_API_KEY=sk-...
ASSEMBLYAI_API_KEY=...

# Firebase Storage
STORAGE_BUCKET=lumimd-dev.appspot.com

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=https://portal.lumimd.app,https://lumimd.app

# Subscription Enforcement
# Set to "true" to disable subscription checks during development
SUBSCRIPTION_ENFORCEMENT_DISABLED=false

# External Drug Data (RxNav)
EXTERNAL_DRUG_DATA_ENABLED=true
EXTERNAL_DRUG_DATA_BASE_URL=https://rxnav.nlm.nih.gov/REST
EXTERNAL_DRUG_DATA_TIMEOUT_MS=5000

# Medication Safety Recheck
MED_SAFETY_RECHECK_ENABLED=true
