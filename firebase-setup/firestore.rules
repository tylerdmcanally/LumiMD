rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================================================
    // HELPER FUNCTIONS
    // ============================================================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isViewerOf(ownerId) {
      return exists(/databases/$(database)/documents/shares/$(ownerId + '_' + request.auth.uid))
        && get(/databases/$(database)/documents/shares/$(ownerId + '_' + request.auth.uid)).data.status == 'accepted';
    }

    function canRead(userId) {
      return isOwner(userId) || isViewerOf(userId);
    }

    // ============================================================================
    // COLLECTION RULES
    // ============================================================================

    match /users/{userId} {
      // Users can only read/update their own profile
      allow read: if isAuthenticated() && isOwner(userId);

      // Account creation - ensure userId matches auth.uid
      allow create: if isAuthenticated() && isOwner(userId);

      // Update own profile - whitelist allowed fields
      allow update: if isAuthenticated()
        && isOwner(userId)
        && request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['firstName', 'lastName', 'preferredName', 'dateOfBirth', 'allergies', 'medicalHistory', 'tags', 'folders', 'createdAt', 'updatedAt']);

      // No deletes - use Cloud Function for cascading delete
      allow delete: if false;
    }

    match /visits/{visitId} {
      // Owner and caregivers can read
      allow read: if isAuthenticated() && canRead(resource.data.userId);

      // Only owner can create - enforce userId matches auth
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;

      // Only owner can update - prevent userId modification
      allow update: if isAuthenticated()
        && isOwner(resource.data.userId)
        && request.resource.data.userId == resource.data.userId;

      // Only owner can delete
      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }

    match /actions/{actionId} {
      // Owner and caregivers can read (viewer permission)
      allow read: if isAuthenticated() && canRead(resource.data.userId);

      // Only owner can create - enforce userId matches auth
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;

      // Only owner can update - prevent userId modification
      allow update: if isAuthenticated()
        && isOwner(resource.data.userId)
        && request.resource.data.userId == resource.data.userId;

      // Only owner can delete
      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }

    match /medications/{medId} {
      // Owner and caregivers can read
      allow read: if isAuthenticated() && canRead(resource.data.userId);

      // Only owner can create - enforce userId matches auth
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;

      // Only owner can update - prevent userId modification
      allow update: if isAuthenticated()
        && isOwner(resource.data.userId)
        && request.resource.data.userId == resource.data.userId;

      // Only owner can delete
      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }

    match /shares/{shareId} {
      // shareId format: {ownerId}_{caregiverUserId}
      // Owner and caregiver can both read their share relationship
      allow read: if isAuthenticated()
        && (request.auth.uid == resource.data.ownerId
            || request.auth.uid == resource.data.caregiverUserId);

      // Only owner can create shares - enforce initial status is 'pending'
      allow create: if isAuthenticated()
        && request.resource.data.ownerId == request.auth.uid
        && request.resource.data.status == 'pending'
        && request.resource.data.role == 'viewer'; // Only viewer role allowed

      // Owner can revoke, caregiver can accept
      allow update: if isAuthenticated()
        && (
          // Owner revoking access
          (request.auth.uid == resource.data.ownerId
           && request.resource.data.status == 'revoked')
          ||
          // Caregiver accepting invitation
          (request.auth.uid == resource.data.caregiverUserId
           && resource.data.status == 'pending'
           && request.resource.data.status == 'accepted')
        );

      // No deletes - use 'revoked' status instead for audit trail
      allow delete: if false;
    }

    match /devices/{deviceId} {
      // Users can only manage their own devices
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;

      allow read, update, delete: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
    }

    match /shareInvites/{inviteToken} {
      // Only owner can create invites
      allow create: if isAuthenticated()
        && request.resource.data.ownerId == request.auth.uid
        && request.resource.data.status == 'pending';

      // Owner can read their invites, invitee can read invites sent to their email
      // Note: We can't check email in rules, so we allow authenticated users to read
      // but the API will filter by email
      allow read: if isAuthenticated()
        && (request.auth.uid == resource.data.ownerId);

      // Only Cloud Functions can update (via admin SDK)
      // Client updates are handled through the API
      allow update: if false;

      // No deletes - use status updates instead
      allow delete: if false;
    }

    match /auth_handoffs/{code} {
      // SECURITY: Handoff codes should only be created/managed by Cloud Functions
      // using admin SDK, not by client code. Deny all client access.
      allow read, write: if false;
    }
  }
}
