{
  "expo": {
    "name": "LumiMD",
    "slug": "lumimd",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#0A99A4"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lumimd.app",
      "associatedDomains": [
        "applinks:lumimd.app"
      ],
      "infoPlist": {
        "NSMicrophoneUsageDescription": "LumiMD needs access to your microphone to record your medical visits.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "audio"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0A99A4"
      },
      "package": "com.lumimd.app",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "scheme": "lumimd",
    "plugins": [
      "expo-router",
      "expo-dev-client",
      [
        "expo-av",
        {
          "microphonePermission": "Allow LumiMD to record audio for your medical visit recordings."
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "e496534e-6396-4109-9051-6569d134e1f7"
      }
    }
  }
}
